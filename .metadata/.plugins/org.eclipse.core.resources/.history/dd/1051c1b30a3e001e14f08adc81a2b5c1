package org.program.repository;

import java.util.List;

import org.program.entity.NewCar;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;

public interface NewCarRepository extends JpaRepository<NewCar, Integer>{
//	public List<NewCar>
	
	public List<NewCar> findByModelName(String modelName);
	public List<NewCar> findByModelType(String modelTpe);
	public List<NewCar> findByModelBrand(String modelBrand);
	public List<NewCar> findByModelYear(String modelYear);
	public NewCar findByNewCarId(int newCarId);

	//("SELECT c FROM Car c WHERE (c.price >= :minPrice OR c.price <= :maxPrice) AND c.cartype = :cartype")
	@Query("select c from NewCar c where(c.price like 1 Lakh% OR c.price Like 5 Lakh%) AND c.modelType = ?3")
	public List<NewCar> searchCarByType1(String minPrice, String maxPrice, String modelType);
	
	@Query("select c from NewCar c where(c.price >= ?1 or c.price <= ?2) and c.modelType = ?3")
	public List<NewCar> searchCarByType2(String minPrice, String maxPrice, String modelType);
	
	@Query("select c from NewCar c where(c.price >= ?1 or c.price <= ?2) and c.modelType = ?3")
	public List<NewCar> searchCarByType3(String minPrice, String maxPrice, String modelType);
	
	@Query("select c from NewCar c where(c.price >= ?1 or c.price <= ?2) and c.modelType = ?3")
	public List<NewCar> searchCarByType4(String minPrice, String maxPrice, String modelType);
	
	@Query("select c from NewCar c where(c.price >= ?1 or c.price <= ?2) and c.modelType = ?3")
	public List<NewCar> searchCarByType5(String minPrice, String maxPrice, String modelType);
	
	@Query("select c from NewCar c where(c.price >= ?1 or c.price <= ?2) and c.modelType = ?3")
	public List<NewCar> searchCarByType6(String minPrice, String maxPrice, String modelType);
	
	@Query("select c from NewCar c where(c.price >= ?1 or c.price <= ?2) and c.modelType = ?3")
	public List<NewCar> searchCarByType7(String minPrice, String maxPrice, String modelType);
	
	@Query("select c from NewCar c where(c.price >= ?1 or c.price <= ?2) and c.modelType = ?3")
	public List<NewCar> searchCarByType8(String minPrice, String maxPrice, String modelType);
	
	@Query("select c from NewCar c where(c.price >= ?1 or c.price <= ?2) and c.modelType = ?3")
	public List<NewCar> searchCarByType9(String minPrice, String maxPrice, String modelType);
	
}
